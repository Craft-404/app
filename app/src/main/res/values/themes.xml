<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sainyojit" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/light_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="fontFamily">@font/dm_sans</item>
        <item name="android:windowBackground">@color/white_light</item>
    </style>

    <style name="Theme.Sainyojit.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Theme.Sainyojit.Button">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="cornerRadius">4dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/margin_extra_small</item>
        <item name="android:paddingBottom">@dimen/margin_extra_small</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Sainyojit.TabItem">
        <item name="cornerRadius">4dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/margin_extra_small</item>
        <item name="android:paddingBottom">@dimen/margin_extra_small</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme_Sainyojit_Dialog">
        <item name="android:windowMinWidthMajor">60%</item>
        <item name="android:windowMinWidthMinor">60%</item>
    </style>
</resources>